- item = form.object
= render "admin/shared/errors", item: item
%fieldset.row
  .col-xxs-12
    %legend Informations générales
  .col-xxs-12
    = form.input :active, wrapper: :inline_checkbox
    = form.input :civility, as: :radio_buttons, collection: civilities, item_wrapper_class: "inline", required: true
    = form.input :first_name, wrapper_html: { class: "size-m" }, autofocus: true
    = form.input :last_name, wrapper_html: { class: "size-m" }, autofocus: true
    = form.input :description, input_html: { rows: 4 }

