- item = form.object
= render "admin/shared/errors", item: item
%fieldset.row
  .col-xxs-12
    %legend Informations générales
  .col-xxs-12
    = form.input :active, wrapper: :inline_checkbox
    = form.input :name, wrapper_html: { class: "size-m" }, autofocus: true
    = form.input :country_ids, collection: @countries, selected: @item.countries.map { |x| x.id.to_s }, input_html: { class: "size-s select2", multiple: true }
    = form.input :tag_ids, collection: @tags, selected: @item.tags.map { |x| x.id.to_s }, input_html: { class: "size-s select2", multiple: true }
    = form.input :duration, wrapper_html: { class: "size-s" }, autofocus: true
    = form.input :price, wrapper_html: { class: "size-s" }, autofocus: true
    = form.input :resume, input_html: { rows: 3, class: "tinymce" }
    = form.input :description, input_html: { rows: 4, class: "tinymce" }
    = form.input :budget, input_html: { rows: 4, class: "tinymce" }

