- if 0 < @breadcrumbs.size
  %ol.breadcrumb
    - last_index = @breadcrumbs.size - 1
    - @breadcrumbs.each_with_index do |bc, index|
      - classes = []
      - classes << "active" if index == last_index
      %li{ class: classes }
        -#= (index == last_index) ? bc[:name] : link_to(bc[:name], bc[:url])
        = link_to(bc[:name], bc[:url])

